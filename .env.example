# =============================================================================
# CONFIGURAÇÕES OBRIGATÓRIAS - MCP UNIFICADO 2.0
# =============================================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Groq API Key (obrigatória para funcionalidades de IA)
# Obtenha em: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key

# =============================================================================
# CONFIGURAÇÕES DO MCP UNIFICADO
# =============================================================================

# Nível de log (debug, info, warn, error)
MCP_LOG_LEVEL=info

# Rate limiting (requisições por minuto)
MCP_RATE_LIMIT=100

# Timeout para operações (em milissegundos)
MCP_TIMEOUT=30000

# TTL do cache (em segundos)
MCP_CACHE_TTL=3600

# =============================================================================
# CONFIGURAÇÕES DE IA (GROQ)
# =============================================================================

# Modelo de IA a ser usado
GROQ_MODEL=llama-3.1-70b-versatile

# Máximo de tokens por requisição
GROQ_MAX_TOKENS=4000

# Temperatura para geração (0.0 a 1.0)
GROQ_TEMPERATURE=0.1

# Habilitar fallback quando IA falha
GROQ_FALLBACK_ENABLED=true
